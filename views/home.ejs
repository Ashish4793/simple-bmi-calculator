<%- include ("partials/header") %> 


<h1>BMI Calculator</h1>

    <form action="/submit" method="POST" class="form">
        <div class="mb-3">
          <label for="exampleInputHeight" class="form-label">Enter your Height in cm</label>
          <input name="height" style="width: 22vw; margin: auto;" autocomplete="off" required type="number" step="0.1" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        </div>
        <div style="margin: auto;" class="mb-3">
          <label for="exampleInputWeight" class="form-label">Enter your Weight in kg</label>
          <input  name="weight" style="width: 22vw; margin: auto;" autocomplete="off" required type="number" step="0.1" class="form-control" id="exampleInputPassword1">
        </div>
        <button style="color: #ffffff; background-color: #59CE8F;" type="submit" class="btn">Submit!</button>
      </form>

      <img width="300" class="bmi-on" src="images/bmi-u.jpg" alt="">


